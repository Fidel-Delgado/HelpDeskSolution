@using SoporteTI.Application.Helpers
@model SoporteTI.Application.DTOs.TicketDto

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-body">

        <h1 class="text-danger">Are you sure you want to delete this record?</h1>

        <div class="card mb-3">
            <div class="card-body">
                <p>
                    Please review the ticket information below before confirming the deletion.
                    <br />This action cannot be undone.
                </p>
            </div>
        </div>

        <hr />

        <form asp-action="DeleteConfirmed" class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-lg-4">
                <label asp-for="Tk_Folio" class="control-label"></label>
                <input asp-for="Tk_Folio" class="form-control" readonly />
            </div>

            <div class="col-lg-12">
                <label asp-for="Tk_Title" class="control-label"></label>
                <input asp-for="Tk_Title" class="form-control" readonly />
            </div>

            <div class="col-lg-12">
                <label asp-for="Tk_Description" class="control-label"></label>
                <input asp-for="Tk_Description" class="form-control" readonly />
            </div>

            <div class="col-lg-12">
                <label asp-for="Tk_Reason" class="control-label"></label>
                <input asp-for="Tk_Reason" class="form-control" readonly />
            </div>

            <div class="col-lg-4">
                <label asp-for="Tk_StatusId" class="control-label"></label>
                <select asp-for="Tk_StatusId" class="form-control" asp-items="@(new SelectList(ViewBag.Status, "Value", "Text", Model.Tk_StatusId))" disabled>
                </select>
            </div>

            <div class="col-lg-4">
                <label asp-for="Tk_ImpactId" class="control-label"></label>
                <select asp-for="Tk_ImpactId" class="form-control" asp-items="@(new SelectList(ViewBag.Impact, "Value", "Text", Model.Tk_ImpactId))" disabled>
                </select>
            </div>

            <div class="col-lg-4">
                <label asp-for="Tk_PriorityId" class="control-label"></label>
                <select asp-for="Tk_PriorityId" class="form-control" asp-items="@(new SelectList(ViewBag.Priority, "Value", "Text", Model.Tk_PriorityId))" disabled>
                </select>
            </div>

            <div class="col-lg-12 mt-3">
                <hr />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
